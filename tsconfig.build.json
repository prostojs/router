{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "rootDir": "src",
        "outDir": "dts-build",
        "removeComments": false,
        "sourceMap": false
    },
    "include": ["src/*", "src/**/*"],
    "exclude": [
        "node_modules",
        "explorations",
        "scripts",
        "**/__tests__",
        "**/*.spec.ts"
    ]
}
